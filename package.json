{
  "name": "nodejs-web-tools",
  "version": "1.0.0",
  "description": "基于 Node.js 和 Playwright 的网页数据爬虫工具集",
  "main": "main.js",
  "bin": {
    "gold-scraper": "./main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "dev:api": "ts-node src/index.ts --api",
    "start": "node dist/index.js",
    "start:api": "node dist/index.js --api",
    "scrape:gold": "ts-node src/scrapers/gold-price-scraper.ts",
    "setup": "node scripts/setup.js",
    "test:scraper": "ts-node scripts/test-scraper.ts",
    "backup": "ts-node scripts/backup-data.ts",
    "monitor": "ts-node scripts/monitor.ts",
    "clean": "rimraf dist logs/*.log",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["scraper", "playwright", "supabase", "gold-price", "crawler"],
  "author": "Simon",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0",
    "@supabase/supabase-js": "^2.38.0",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.8",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "ts-node": "^10.9.1",
    "rimraf": "^5.0.5"
  }
}

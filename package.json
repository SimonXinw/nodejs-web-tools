{
  "name": "nodejs-web-tools",
  "version": "1.0.0",
  "description": "基于 Node.js 和 Playwright 的金价爬虫工具",
  "main": "main.js",
  "bin": {
    "gold-scraper": "./main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "dev:api": "ts-node src/index.ts --api",
    "start": "node dist/index.js",
    "start:api": "node dist/index.js --api",
    "setup": "node scripts/setup.js",
    "setup": "node scripts/setup.js",
    "test:scraper": "ts-node scripts/test-scraper.ts",
    "clean": "rimraf dist logs/*.log",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop gold-scraper",
    "pm2:restart": "pm2 restart gold-scraper",
    "pm2:delete": "pm2 delete gold-scraper",
    "pm2:logs": "pm2 logs gold-scraper",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t gold-scraper .",
    "docker:run": "docker run -d --name gold-scraper --env-file .env -p 3000:3000 -v $(pwd)/logs:/app/logs gold-scraper",
    "docker:stop": "docker stop gold-scraper",
    "docker:remove": "docker rm gold-scraper",
    "docker:logs": "docker logs -f gold-scraper",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "scraper",
    "playwright",
    "supabase",
    "gold-price",
    "crawler"
  ],
  "author": "Simon",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0",
    "@supabase/supabase-js": "^2.38.0",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.8",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "ts-node": "^10.9.1",
    "rimraf": "^5.0.5"
  }
}

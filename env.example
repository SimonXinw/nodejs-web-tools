# =============================================================================
# Gold Scraper 环境变量配置文件
# =============================================================================

# Supabase 数据库配置
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# 应用配置
NODE_ENV=production
PORT=3000
ENABLE_API=true
API_PORT=3000

# 爬虫配置
SCRAPER_SCHEDULE="0 */6 * * *"  # 每6小时运行一次 (cron格式)
HEADLESS=true                   # 无头浏览器模式
TIMEOUT=30000                   # 超时时间(毫秒)
MAX_RETRIES=3                   # 最大重试次数
RETRY_DELAY=5000               # 重试延迟(毫秒)

# 日志配置
LOG_LEVEL=info                  # 日志级别: error, warn, info, debug
LOG_MAX_SIZE=100m              # 单个日志文件最大大小
LOG_MAX_FILES=5                # 保留的日志文件数量

# Redis配置 (可选)
REDIS_HOST=redis               # Redis主机地址
REDIS_PORT=6379                # Redis端口
REDIS_PASSWORD=                # Redis密码(如果有)
REDIS_DB=0                     # Redis数据库编号

# API配置
API_RATE_LIMIT=100             # API请求速率限制(每分钟)
API_CORS_ORIGIN=*              # CORS允许的源
API_JWT_SECRET=your_jwt_secret_key_here  # JWT密钥

# 监控配置
HEALTH_CHECK_INTERVAL=30       # 健康检查间隔(秒)
METRICS_ENABLED=true           # 是否启用指标收集
PROMETHEUS_PORT=9090           # Prometheus指标端口

# 安全配置
ENABLE_HTTPS=false             # 是否启用HTTPS
SSL_CERT_PATH=                 # SSL证书路径
SSL_KEY_PATH=                  # SSL私钥路径

# 数据库备份配置 (可选)
BACKUP_ENABLED=false           # 是否启用自动备份
BACKUP_SCHEDULE="0 2 * * *"    # 备份计划 (每天凌晨2点)
BACKUP_RETENTION_DAYS=7        # 备份保留天数

# 通知配置 (可选)
NOTIFICATION_ENABLED=false     # 是否启用通知
WEBHOOK_URL=                   # Webhook通知URL
EMAIL_SMTP_HOST=               # 邮件SMTP主机
EMAIL_SMTP_PORT=587            # 邮件SMTP端口
EMAIL_USERNAME=                # 邮件用户名
EMAIL_PASSWORD=                # 邮件密码
EMAIL_FROM=                    # 发件人邮箱
EMAIL_TO=                      # 收件人邮箱

# 开发配置
DEBUG=false                    # 调试模式
DEVELOPMENT_MODE=false         # 开发模式
HOT_RELOAD=false              # 热重载 